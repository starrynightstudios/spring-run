<footer class="footer">
  <div class="container">
    <div class="columns is-centered">
      <% data.footer.columns.each do |column| %>
        <div class="column is-narrow">
          <% if column.label.present? %>
            <div>
              <p class="heading"><%= column.label %></p>
            </div>
          <% end %>
          <% if column.content.present? %>
            <p class="content">
              <%= markdown column.content %>
            <p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</footer>
